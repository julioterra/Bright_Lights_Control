<?xml version="1.0"?>
<device>

	<name>bright_words_v2</name> 
	
	<specifications>
		<media>
			<type>physical</type>
			<port>serial</port>
		</media> 
		
		<layout>
			<columns>8</columns>
			<rows>1</rows>
		</layout> 

		<contents>
			<transport></transport>
			<resources>in/out</resources>
			<realtime>in</realtime>
		<contents>		
	</specifications>

	<transport>
		<power datatype="int">
			<on>1</on>
			<off>2</off>
		</power> 		
		<mode datatype="int">
			<color>0</color>
			<strobe>1</strobe>
			<scroll>1</scroll>
			<realtime>1</realtime>
		</mode> 
	</transport>

	<resources dataflow="in/out">
		<color> 
			<hue datatype="float"> 
				<min>0</min>
				<max>1</max>
			</hue>
			<saturation datatype="float"> 
				<min>0</min>
				<max>1</max>
			</saturation>
			<brightness datatype="float"> 
				<min>0</min>
				<max>1</max>
			</brightness>
		</color>
		<strobe> 
			<speed datatype="float"> 
				<min>0</min>
				<max>1</max>
			</speed>
		</strobe>
		<scroll> 
			<speed datatype="float"> 
				<min>0</min>
				<max>1</max>
			</speed>
			<direction datatype="float"> 
				<min>0</min>
				<max>1</max>
			</direction>
			<width datatype="float"> 
				<min>0</min>
				<max>1</max>
			</width>
		</scroll>
	</resources>

	<realtime>
		<output> 
			<addresses datatype="byte">24</addresses>
			<range>
				<min>0</min>
				<max>127</max>
			<range>
		</output>

		<input>
			
		</input>
	</realtime>

</device>